        }
}

void condicionFor(): {}
{
    try{
            (tipoDato()) (comparacionForIgual()) <DELIMITADOR> 
            (comparacionFor()) <DELIMITADOR> operadorIncDec() <IDENTIFICADOR>
                } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
