TOKEN_MGR_DECLS : {
    static ArrayList<String> tablaErrores = new ArrayList<String>();
}

void principal() :{} 
{
    try {
        <INICIO> <IDENTIFICADOR> <LLAVEIZQ>
        (
            Codigo()
        )+
        <LLAVEDER> <FIN>
    } catch (ParseException e) {
        tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
    }
}

void Codigo() : {}
{
        declararVariable()
        | gramaticaEscribir()
        | gramaticaLeer()
        | gramaticaSi()
        | gramaticaWhile()
        | gramaticaAsignacion()
        | gramaticaOperadorLogico()
        | gramaticaFor()
        | inicializarArregloEntero()
        | inicializarArregloCadena()
        | SentenciasProcedimientos()
        | SentenciasFunciones()
}

void declararVariable() : {Token t,t1;}
{
    try {
        <VAR> t =  <IDENTIFICADOR>
        t1 = tipoDato()
        {
            if(tablaSimbolos.contains(t.image)) tabla.add("Error semántico: La variable " + t.image + " ya ha sido declarada");
            else tablaSimbolos.addSymbol(t.image, new Symbol(t.image,t1.image));
        }
        [<IGUAL> 
        valor2(t1.image)
        ] <DELIMITADOR>

    } catch (ParseException e) {
        tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
    }
}

Token tipoDato() : {Token t = null;}
{
    (t = <ENT>
    | t = <FLOT>
    | t = <BOOL>
    | t = <CAD>
    )
    {
        return t;
    }
}

void valor2(String tipoEsperado) : {Token t;}
{
    t = <ENTEROS> {
        if (!tipoEsperado.equals("ent")) {
            tabla.add("Error semántico: Se esperaba un valor de tipo " + tipoEsperado + " pero se encontró un entero");
        }
    }
    | t = <VCAD> {
        if (!tipoEsperado.equals("cad")) {
            tabla.add("Error semántico: Se esperaba un valor de tipo " + tipoEsperado + " pero se encontró una cadena");
        }
    }
    | t = <NUMERODECIMAL> {
        if (!tipoEsperado.equals("flot")) {
            tabla.add("Error semántico: Se esperaba un valor de tipo " + tipoEsperado + " pero se encontró un número decimal");
        }
    }
    | t = <IDENTIFICADOR> {
        if (!tablaSimbolos.contains(t.image)) {
            tabla.add("Error semántico: La variable " + t.image + " no ha sido declarada");
        } else if (!tablaSimbolos.checkType(t.image, tipoEsperado)) {
            tabla.add("Error semántico: Se esperaba un valor de tipo " + tipoEsperado + " pero se encontró " + tablaSimbolos.getType(t.image));
        }
    }
}

void valor() : {}
{
    <ENTEROS> | <VCAD> | <NUMERODECIMAL> | <IDENTIFICADOR>
}

void gramaticaEscribir() : {}
{
    try {
        <ESCRIBIR> <PARENIZQ>
            ( 
                (<VCAD> | <IDENTIFICADOR>)
                (<CONCATENAR> (<VCAD> | <IDENTIFICADOR>))* 
            )+
         <PARENDER> <DELIMITADOR>
    } catch (ParseException e) {
        tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
    }
}

void gramaticaLeer() : {}
{
    try {
        <LEER> <PARENIZQ>
        (
            <IDENTIFICADOR>
        ) <PARENDER> <DELIMITADOR>
    } catch (ParseException e) {
        tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
    }
}

void gramaticaSi() : {}
{
    try {
            <SI> <PARENIZQ> 
            (condicion())+
            <PARENDER> <LLAVEIZQ> (Codigo())+ <LLAVEDER>
            ( gramaticaSiNo() )*
        } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void gramaticaSiNo() : {}
{
    try {
            <SINO> <LLAVEIZQ> (Codigo())+ <LLAVEDER>
        } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void condicion() : {}
{
    try {
    valor() OperadoresComparadores() valor() (condicionLogicos())*
    } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void condicionLogicos() : {}
{
    try {
    OperadoresLogicos() valor() OperadoresComparadores() valor()
    } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void OperadoresLogicos() : {}
{
     <AND> | <OR> | <NOT>
}

void OperadoresComparadores() : {}
{
    <IGUALDAD> | <DESIGUALDAD> | <MAYOR> | <MENOR> | <MAYORIGUAL> | <MENORIGUAL>
}

void gramaticaWhile() : {}
{
    try{
        <WHILE> <PARENIZQ> 
        condicion() 
        <PARENDER> <LLAVEIZQ> (Codigo())+ <LLAVEDER> 
    } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void gramaticaAsignacion(): {Token t;}
{
    try{
	        t = < IDENTIFICADOR >
	        < IGUAL >
	        operacionSimple(tablaSimbolos.getType(t.image))
	            {
	                if(!tablaSimbolos.contains(t.image)){
                    tabla.add("Error semántico: La variable " + t.image + " no ha sido declarada");
                }
	        }
	        <DELIMITADOR>
        } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void operacionSimple(String type): { }
{
    try{
            (  valor2(type) | operacionParentesis(type))
            ( operadorAritmetico() (valor2(type) | operacionParentesis(type)) )*
        } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void operacionParentesis(String type): { }
{
    try{
	        < PARENIZQ > operacionSimple(type) < PARENDER >
        } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void operadorAritmetico(): {}
{
	< MAS > | < MENOS > | < MULT > | < DIV > | < RES >
}

void gramaticaOperadorLogico(): {}
{
    try{
        < BOOL > <IDENTIFICADOR> 
        <IGUAL> 
            condicionLogico()
        <DELIMITADOR>
                } catch (ParseException e) {
            tabla.add(manejarErrorSintactico(e)); // Agregar error a la tabla
        }
}

void condicionLogico(): {}
{
